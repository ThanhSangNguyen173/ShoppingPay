<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/LIGHT_PRIMARY_COLOR">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your table now"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tablenumber"
        android:text="Table 3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/img_table"
        android:layout_marginTop="20dp"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="@drawable/disable_table"
        android:layout_gravity="center"/>
    <Button
        android:layout_marginTop="-5dp"
        android:id="@+id/btn_changetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Table "
        android:textSize="20dp"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:background="#00D7CCC8"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_gotomenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to menu "
        android:visibility="invisible"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan TagCast for checkin "
        android:textSize="20dp" />

</LinearLayout>