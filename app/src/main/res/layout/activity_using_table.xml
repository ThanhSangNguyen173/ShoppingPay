<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/LIGHT_PRIMARY_COLOR"
    tools:context=".views.activity.choosetable.UsingTableActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your table now"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tablenumber"
        android:text="Table 3"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/img_table"
        android:layout_marginTop="20dp"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/chairbusy"
        android:layout_gravity="center"/>

    <Button
        android:layout_marginTop="45dp"
        android:id="@+id/btn_gotomenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to menu "
        android:textSize="20dp" />
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_changetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Table "
        android:textSize="20dp"
        android:textColor="@color/DARK_PRIMARY_COLOR"
        android:background="#00D7CCC8"/>


</LinearLayout>